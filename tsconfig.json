{
    "include": ["src/**/*.ts", "@types/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        "lib": ["dom", "es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "target": "es6",
        "typeRoots": ["./node_modules/@types"]
    }
}
